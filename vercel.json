{
  "version": 2,
  "builds": [
    {
      "src": "start.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "server/**"
      }
    },
    {
      "src": "client/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/start.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
